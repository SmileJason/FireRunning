<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FireRunning">
        <!-- titlebar属性 -->
        <attr name="label" format="string|reference" />
        <attr name="leftButtonDrawable" format="reference" />
        <attr name="rightButtonDrawable" format="reference" />
        
        <!-- RoundProgressBar属性 -->
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />  
        <attr name="textSize" format="dimension" /> 
        <attr name="max" format="integer"></attr> 
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
        
        <!-- CircleImageView属性 -->
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        
        <!-- IconTextView属性 -->
        <attr name="text" format="string" />
        <attr name="icon" format="color|reference" />
        
        <attr name="input_txt" format="string" />
       	<attr name="input_hint" format="string" />
       	<attr name="input_left" format="color|reference" />
       	<attr name="input_right" format="color|reference" />
       	<attr name="input_type" format="enum" >
       	    <enum name="none" value="0" />
            <enum name="number" value="1" />
            <enum name="numberSigned" value="2" />
            <!-- 有符号整数 -->
            <enum name="numberDecimal" value="3" />
            <!-- 有小数点数字 -->
            <enum name="textPassword" value="4" />
            <enum name="numberPassword" value="5" />
            <enum name="phone" value="6" />
       	</attr>
        
    </declare-styleable>
    
    <declare-styleable name="TextRoundCornerProgress">
        <attr name="rcTextProgressColor" format="color" />
        <attr name="rcTextProgressSize" format="dimension" />
        <attr name="rcTextProgressMargin" format="dimension" />
        <attr name="rcTextProgress" format="string" />
    </declare-styleable>
    
    <declare-styleable name="RoundCornerProgress">
        <attr name="rcReverse" format="boolean" />
        <attr name="rcProgress" format="float" />
        <attr name="rcMax" format="float" />
        <attr name="rcSecondaryProgress" format="float" />
        <attr name="rcBackgroundPadding" format="dimension" />
        <attr name="rcRadius" format="dimension" />
        <attr name="rcProgressColor" format="color" />
        <attr name="rcSecondaryProgressColor" format="color" />
        <attr name="rcBackgroundColor" format="color" />
    </declare-styleable>
    
</resources>
